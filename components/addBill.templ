package components

import "github.com/nathanaelcunningham/billReminder/models"
import "fmt"

templ AddBill(bill models.Bill) {
	<tr hx-swap-oob="beforeend:#bill-table">
		<td class="px-2 py-4">
			{ bill.Name }
		</td>
		<td class="px-2 py-4">
			{ fmt.Sprint(bill.Amount) }
		</td>
		<td class="px-2 py-4">
			{ fmt.Sprint(bill.DueDateDay) }
		</td>
	</tr>
}
