package components

import "github.com/nathanaelcunningham/billReminder/models"
import "fmt"

templ Layout(bills []models.Bill) {
	<html>
		<head>
			<title>Bill Minder</title>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<script src="https://cdn.tailwindcss.com"></script>
		</head>
		<body class="max-w-7xl mx-auto">
			<div>
				@billsList(bills)
			</div>
		</body>
	</html>
}

templ billsList(bills []models.Bill) {
	<div class="divide-y divide-black-800">
		for _, bill := range bills {
			<div class="grid grid-flow-col auto-cols-fr">
				<div class="text-red-50">{ bill.Name }</div>
				<div>{ fmt.Sprint(bill.Amount) }</div>
				<div>{ fmt.Sprint(bill.DueDateDay) }</div>
			</div>
		}
	</div>
}
